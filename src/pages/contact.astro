---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'お問い合わせ',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="お問い合わせ" title="お気軽にご連絡ください" />

  <ContactUs
    id="form"
    title="本日中にメッセージをお寄せください"
    subtitle="お急ぎの場合は、まずFAQをご覧ください。そこで解決しないときは、サポートチームが喜んでお手伝いします。"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'お名前',
      },
      {
        type: 'email',
        name: 'email',
        label: 'メールアドレス',
      },
    ]}
    textarea={{
      label: 'メッセージ',
    }}
    disclaimer={{
      label:
        'フォームを送信することで、個人情報の取得に同意いただいたものとみなします。',
    }}
    description="通常、サポートチームは営業日24時間以内にご返信いたします。"
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="私たちがお手伝いします"
    items={[
      {
        title: '一般的なサポート',
        description: `アカウント管理、サイトの操作方法、支払いトラブル、購入済みテンプレートへのアクセス、その他機能に関するご質問はお気軽にご相談ください。`,
      },
      {
        title: '営業へのお問い合わせ',
        description:
          '購入に関するご相談、カスタマイズのご要望、商用利用ライセンス、特定テンプレートについてのご質問などはこちらからどうぞ。',
      },
      {
        title: '技術サポート',
        description:
          'テンプレートのインストールや編集の不具合、ソフトウェアとの互換性、ダウンロードエラーなど技術的な問題がありましたらご連絡ください。',
      },
      {
        title: '電話',
        description: '+1 (234) 567-890',
        icon: 'tabler:headset',
      },
      {
        title: 'メール',
        description: 'contact@support.com',
        icon: 'tabler:mail',
      },
      {
        title: '所在地',
        description: '1234 Lorem Ipsum St, 12345, Miami, EEUU',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
